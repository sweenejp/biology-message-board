<section class="postslist-grid-reverse-mini">
  {% for post in postslist | reverse %}
    {% if "Hide-on-home" in post.data.tags or "Hide-everywhere" in post.data.tags or "firstsemester" in post.data.tags or "secondsemester" in post.data.tags %}
      {% else %}
        <article class="post-card post-card-mini" {% if post.url == url %} data-current="current item" {% endif %}>
          {% if post.data.featuredImage %}
            <a href="{{ post.url | url }}">
              <img class="post-card-image post-card-image-mini" src="{{ post.data.featuredImage }}" loading="lazy" alt=""></a>
            {% endif %}
            <div class="post-card-body post-card-body-mini">
              <a href="{{ post.url | url }}">
                <h3 class="post-card-title">
                  {% if post.data.title %}
                    {{ post.data.title }}
                  {% else %}
                    Untitled
                  {% endif %}
                </h3>
              </a>
              <p class="post-card-data">
                <time datetime="{{ post.date | machineDate }}">
                  <small>{{ post.date | readableDate }}</small>
                </time>
              </p>
              {% if post.data.summary %}
                <p class="post-card-summary">
                  {{ post.data.summary }}
                </p>
              {% endif %}
            </div>
          </article>
        {% endif %}
    {% endfor %}
  </section>